def how_many_countries():
    """
    It counts how many countries we have in a given list.
        Return: Quantity of items based on len(tuple)
    """
    country_quantity = len(countries)
    return country_quantity


def get_name_of_longest_country():
    """
    It finds the longest name in a given tuple.
        Formula: max(iterable, key=len)
        Return: Country with longest name.
    """
    longest_name = max(countries, key=len)
    return longest_name


def get_number_of_capitals_containing(substring):
    """
    Searches for a specific character in a list.
        Parameter: substring
        Returns: The amount of occurences.
    """
    matches_found = []

    for word in capitals:
        if substring.lower() in word.lower():
            matches_found.append(word)
    
    return len(matches_found)


def get_countries_and_capitals_that_start_with_same_letter():
    """
    Searches for the objects in a list that start with the same letter.
        Returns: The amount of occurences matching the statment above.
    """
    matches_found = []
    
    for pair in countries_and_capitals:
        capital_first_letter = pair[0][0].lower()
        country_first_letter = pair[1][0].lower() 
        if capital_first_letter == country_first_letter:
            matches_found.append(pair[1]+ " - " + pair[0])

    return matches_found


def get_capital_of(substring):
    """
    Searches for the capital of a given country.
        Parameter: substring
        Returns: capital or No Such Country if not existent.
    """
    
    for pair in countries_and_capitals:

        country = pair[0].lower()
        capital = pair[1].lower()

        if country == substring.lower():
            return capital.title()

    if country != substring:
        print("No such country")
 
            
def get_list_of_countries_with_this_many_letters_in_name(num_letters):
    """
  Searches for countries that match the amount of characters desired. 
    Parameter: num_letters 
    Returns: Country that matches statement above or NONE is not existent.
    """
    matches_found = []

    for country in countries:
        num_letters_country = len(country)
        if num_letters_country == num_letters:
            matches_found.append(country)

    return matches_found


def get_capitals_and_countries_that_begin_and_end_with_same_letter():
    """
    Checks if first and last letters of the objects in a given list are the same.
        Returns: All the countries and then all the capitals match the statement above.
    """
    matches_capitals = []
    matches_countries = []
    
    for pair in countries_and_capitals:

        country_first_letter = pair[0][0].lower() 
        country_last_letter = pair[0][-1].lower() 

        if country_first_letter == country_last_letter:
            matches_countries.append(pair[0])

        capital_first_letter = pair[1][0].lower()
        capital_last_letter = pair[1][-1].lower()

        if capital_first_letter == capital_last_letter:
            matches_capitals.append(pair[1])

    return matches_countries + matches_capitals


def print_countries_in_reverse_alphabetical_order():
    """
    Reverses a given list.
        Print: the reversed list as a tuple.
    """
    countries_alphabetical_order = sorted(list(countries))
    countries_alphabetical_order.reverse()
    print(tuple(countries_alphabetical_order))
    
